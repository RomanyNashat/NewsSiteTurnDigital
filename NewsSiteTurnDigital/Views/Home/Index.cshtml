@using NewsSiteTurnDigital.WEB.ViewModel;


@{
    ViewData["Title"] = "Index";
    var homeViewModel = ViewBag.Index as HomeViewModel;

}
<header class="masthead bg-primary text-white text-center">

<div class="container">

    <div id="carouselExampleCaptions" class="carousel slide">
        <div class="carousel-indicators">
            @foreach (var item in homeViewModel.FirstPageNews)
            {
                if (@item.Id == 1)
                {
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@item.Id" class="active" aria-current="true" aria-label="@item.Title"></button>
                }
                else
                {
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@item.Id" aria-label="@item.Title"></button>
                }
            }
        </div>
        <div class="carousel-inner">
            @foreach (var item in homeViewModel.FirstPageNews)
            {
                if (@item.Id == 1)
                {
                    <div class="carousel-item active">
                        <img src="~/img/News/@item.ImageUrl" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@item.Title</h5>
                            <p>@item.Content</p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img src="~/img/News/@item.ImageUrl" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@item.Title</h5>
                            <p>@item.Content.Substring(0,50)...</p>
                            <p>@item.Content.Substring(0,50)...    firstitem</p>
                        </div>
                    </div>
                }
            }

        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
</header>

<section class="page-section newsItem" id="newsItem">

<div class="container">
    @foreach (var item in homeViewModel.FirstNews.Take(3))
    {
        <div class="card mb-3">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="~/img/News/@item.ImageUrl" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Content.Substring(0,250)...</p>
                        <a href="#" data-toggle="modal" data-target="#item-@item.Id">See More</a>
                    </div>
                </div>
            </div>
        </div>

    }
</div>
</section>


<section class="page-section newsItem" id="newsItem">


<div class="container">

    <!-- newsItem Section Heading -->
    <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">newsItem</h2>

    <!-- Icon Divider -->
    <div class="divider-custom">
        <div class="divider-custom-line"></div>
        <div class="divider-custom-icon">
            <i class="fas fa-star"></i>
        </div>
        <div class="divider-custom-line"></div>
    </div>

    <!-- newsItem Grid Items -->
    <div class="row">

        <!-- newsItem Item 1 -->
        @foreach (var item in homeViewModel.AllNews)
        {
            <div class="col-md-6 col-lg-4">
                <div class="newsItem-item mx-auto " data-toggle="modal" data-target="#item-@item.Id">
                    <div class="card d-flex align-items-center justify-content-center h-100 w-100" style="width: 18rem;">
                        <img src="~/img/News/@item.ImageUrl" class="card-img-top" alt="...">
                        <div class="card-body">
                            <p class="card-text">@item.Title</p>
                        </div>
                    </div>

                </div>
            </div>
        }

    </div>
    <!-- /.row -->

</div>
</section>

<!-- newsItem Modals -->
<!-- newsItem Modal 1 -->
@foreach (var item in homeViewModel.AllNews)
{
    <div class="newsItem-modal modal fade" id="item-@item.Id" tabindex="-1" role="dialog" aria-labelledby="newsItemModal1Label" aria-hidden="true">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">
                        <i class="fas fa-times"></i>
                    </span>
                </button>
                <div class="modal-body text-center">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-8">
                                <!-- newsItem Modal - Title -->
                                <h2 class="newsItem-modal-title text-secondary text-uppercase mb-0">@item.Title</h2>
                                <!-- Icon Divider -->
                                <div class="divider-custom">
                                    <div class="divider-custom-line"></div>
                                    <div class="divider-custom-icon">
                                        <i class="fas fa-star"></i>
                                    </div>
                                    <div class="divider-custom-line"></div>
                                </div>
                                <!-- newsItem Modal - Image -->
                                <img class="img-fluid rounded mb-5" src="~/img/News/@item.ImageUrl" alt="">
                                <!-- newsItem Modal - Text -->
                                <p class="mb-5">@item.Content</p>
                                <button class="btn btn-primary" href="#" data-dismiss="modal">
                                    <i class="fas fa-times fa-fw"></i>
                                    Close Window
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
